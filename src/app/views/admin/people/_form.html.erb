
<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :birthday %>
    <%= f.input :address %>
    <%= f.input :religion %>
    <%= f.input :rg %>
    <%= f.input :start_date %>
    <%= f.input :exit_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
