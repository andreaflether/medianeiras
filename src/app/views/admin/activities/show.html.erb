<section class="invoice">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="page-header">
        <%= @activity.name %>
        <span class="pull-right badge bg-green">Ativa</span>
      </h2>
    </div>
  </div>
  <div class="row invoice-info">
    <div class="col-xs-12">
      <p class="mb-3"><b>Descrição da atividade</b></p>
      <p class="text-muted well well-sm no-shadow">
        <%= @activity.description %>
      </p>
    </div>
    <div class="col-xs-12 col-md-6 col-sm-12">
      <p class="lead">Informações</p>

      <div class="table-responsive">
        <table class="table activity-table">
          <tbody><tr>
            <th>Lotação</th>
            <td><%= @activity.students_count %> alunos matriculados</b> (de um total de <%= @activity.max_capacity%> vagas)</td>
          </tr>
          <tr>
            <th>Status</th>
            <td class="align-middle">
              <span class="label bg-<%= find_color(@activity.percent_of) %>"><%= vacancy(@activity.available) %>
              </span>
            </td>
          </tr>
          <tr>
            <th>Professor(es)</th>
            <td>
              <%= @activity.volunteers.map{ |v| link_to(v.person.name,volunteer_path(v))}.join(", ").html_safe %>
            </td>
          </tr>
          <tr>
            <th class="align-middle">Dia(s)</th>
            <td><ul class="list-group list-group-horizontal weeklist">            
                <% @activity.week_days.each do |day| %>
                  <li class="list-group-item py-2 px-4"><%= day.description %></li>
                <% end %>
              </ul></td>
          </tr>
          <tr>
            <th>Horário</th>
            <td><%= event_time(@activity.starts_at, @activity.ends_at) %></td>
          </tr>
          <tr>
            <th>Local</th>
            <td><%= @activity.location.description %></td>
          </tr>
        </tbody></table>
      </div>
    <%= render 'admin/shared/buttons' %>
    </div>
    <div class="col-xs-12 col-md-6 col-sm-12">
      <p class="mb-3"><b>Imagem de exibição</b></p>
      <img class="img-responsive" src="https://via.placeholder.com/500x300"> 
    </div>
  </div>
  <br />
  <div class="row">
    <div class="col-xs-12 table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nome</th>
          <th>Idade</th>
          <th>Tempo de matrícula</th>
        </tr>
        </thead>
        <tbody>
        <% @activity.students.each do |student| %>
        <tr>
          <td><%= student.person.name %></td>
          <td><%= age(student.person.birthday) %></td>
          <td><%= time_ago_in_words(student.person.start_date)%></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row no-print">
    <div class="col-xs-12">
      <a href="invoice-print.html" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
    </div>
  </div>
</section>