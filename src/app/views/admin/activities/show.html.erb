<div class="row">
  <div class="col-md-6">
    <div class="card custom-card">
      <div class="card-body">
        <h4>
          <b><%= @activity.name %></b>
          <span class="badge badge-success float-right mt-1" style="font-size: 15px;">Ativa</span>
        </h4>
        <hr>
         
        <p class="mt-3 mb-1 text-gray-dark"><b>Descrição</b></p>
        <p class=" text-secondary"><%= @activity.description %></p>
        
        <p class="mt-4 mb-2 text-gray-dark"><b>Imagem de exibição</b></p>
        <img class="img-fluid" src="https://via.placeholder.com/500x300"> 
      </div>
    </div>  
  </div>
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-12"> <!-- Informações -->
        <div class="card custom-card">
          <div class="card-body">
            <h5 class="mb-3">Informações</h5>
            <hr>
            <dl class="row mb-0">
            <dt class="col-md-5 text-gray-dark">Lotação</dt>
              <dd class="col-md-7 text-secondary">
                <b><%= @activity.students_count %> alunos cadastrados</b> (<%= @activity.max_capacity%> vagas)
              </dd>
              
              <dt class="col-md-5 text-gray-dark">Status</dt>
              <dd class="col-md-7 text-secondary">
                <span class="badge badge-<%= find_color(@activity.percent_of) %>"><%= vacancy(@activity.available) %></span>   
              </dd>
              
              <dd class="col-md-12 mt-0 mb-1"><hr></dd>
              <dt class="col-md-5 text-gray-dark">Professor(es)</dt>
              <dd class="col-md-7 text-secondary">Patrícia Maria Fernandes</dd>
              <dt class="col-md-5 text-gray-dark">Dia(s)</dt>
              <dd class="col-md-7 text-secondary">
              <ul class="list-group list-group-horizontal weeklist">            
                <% @activity.week_days.each do |day| %>
                  <li class="list-group-item py-2 px-4"><%= day.description %></li>
                <% end %>
              </ul>
              </dd>
              <dt class="col-md-5 text-gray-dark">Horário</dt>
              <dd class="col-md-7 text-secondary">
                <%= event_time(@activity.starts_at, @activity.ends_at) %>
              </dd>
              <dt class="col-md-5 text-gray-dark">Local</dt>
              <dd class="col-md-7 text-secondary"><%= @activity.location %></dd>
            </dl>  
          </div> <!-- Card body -->
        </div> <!-- Card -->
      </div> <!-- Col-md-12 -->
    </div> <!-- Row  -->
  </div> <!-- Secondary Row -->

</div> <!-- Main Row -->
