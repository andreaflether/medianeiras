<%= simple_form_for(@activity) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :location %>
    <% if action_name === 'edit' %>
      <%= f.input :days, collection: @activity.days.split(','), :selected => @activity.days.split(','),
      input_html: { multiple: true } %>
    <% else %>
      <%= f.input :days, collection: @week_days, include_blank: false, include_hidden: false, input_html: { multiple: true } %>
    <% end %>
    <%= f.input :time_schedule %>
    <%= f.input :max_capacity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
