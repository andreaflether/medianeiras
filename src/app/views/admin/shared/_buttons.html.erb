<div class="btn-actions-group float-right mb-4">
  <%= link_to path(controller_name), method: :delete, data: { confirm: "Tem certeza?" }, 
  class: "btn btn-danger btn-sm" do %>
    <i class="fas fa-trash"></i> Apagar <%= resource_name(controller_name) %> 
  <% end %>
  <%= link_to edit_event_path(@event), class: "btn btn-primary btn-sm" do %>
    <i class="fas fa-pencil-alt"></i> Editar informações 
  <% end %>
  <%= link_to new_event_path, class: "btn btn-success btn-sm" do %>
    <i class="fas fa-plus"></i> Cadastrar <%= resource_name(controller_name) %> 
  <% end %>
</div>