<div class="row">

  <div class="col-md-auto mb-3">
    <div class="px-3 py-3 align-items-center justify-content-center text-center rounded bg-primary">
      <i class="far fa-calendar-alt fa-2x" style="color: rgba(255, 255, 255, 0.85)"></i>
      <h5 class="text-wrap mt-2 mb-0"><b><%= l(@event.start_date, format: "%d/%m/%y" )%></b></h5>
    </div>
  </div>
  
  <div class="col">
    <div class="card card-default">
      <div class="card-header">
      <h3 class="card-title " style="font-size: 20px;"><b><%= @event.title %></b></h3>
      <span class="time float-right" style="color: #666; font-size: 15px;">
        <i class="fas fa-clock"></i> <%= event_time(@event.start_date, @event.end_date, 'start_end') %>
      </span>
      </div>
      <div class="card-body">
        <p><%= @event.description %></p>
        <small class="mb-0" style="color: #555">
          <i class="fas fa-map-marker-alt"></i> 
          <%= @event.location %>
        </small>
      </div>
    </div>
  </div>
  
  <div class="col-md-12">
    <%= render 'admin/shared/buttons'%>
  </div>

</div>


