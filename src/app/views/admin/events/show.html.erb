<div class="row">
  <section class="invoice"> 
    <div class="row">
      <div class="col-xs-12">
        <h2 class="page-header">
          <i class="fa fa-bullhorn"></i> <%= @event.title %>
          <small class="pull-right"><%= time_ago_in_words(@event.start_date) %></small>
        </h2>
      </div>
    </div>
    
    <div class="row">
      <div class="col-md-6 col-sm-12">
        <p class="text-muted well well-sm no-shadow">
          <%= @event.description %>
        </p>

        <address>
          <strong>Local</strong><br>
          <%= @event.location %>
        </address>
      </div>
      
      <div class="col-md-6 col-sm-12">
        

        <div class="table-responsive">
          <table class="table">
            <tbody><tr>
              <th style="width:50%">Data:</th>
              <td><%= complete_date(@event.start_date) %></td>
            </tr>
            <tr>
              <th>Dia da semana:</th>
              <td><%= l(@event.start_date, format: '%A') %></td>
            </tr>
            <tr>
              <th>Hor√°rio:</th>
              <td><%= event_time(@event.start_date, @event.end_date)%></td>
            </tr>
          </tbody></table>
        </div>
      </div>
      
      <div class="row pull-right">
        <div class="col-xs-12">
          <%= render 'admin/shared/buttons'%>
        </div>
     </div>

    </div>
   

    
  </section>
</div>