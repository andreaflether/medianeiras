<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h3 class="text-center login-box-msg">Criar conta</h3>

  <div class="input-group">
    <div class="input-group-addon"><i class="glyphicon glyphicon-user"></i></div>
    <%= f.text_field :first_name, class: "form-control", placeholder: "Nome", autocomplete: "name" %>
  </div>

  <div class="input-group">
    <div class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></div>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Sobrenome", autocomplete: "last_name" %>
  </div>

  <div class="input-group">
    <div class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></div>
    <%= f.text_field :email, class: "form-control", placeholder: "E-mail", autocomplete: "email" %>
  </div>

  <div class="input-group">
    <div class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></div>
    <%= f.text_field :password, class: "form-control", placeholder: "Senha", autocomplete: "password" %>
  </div>

  <div class="input-group">
    <div class="input-group-addon"><i class="glyphicon glyphicon-ok-circle"></i></div>
    <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Confirmação da senha", autocomplete: "password" %>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.submit "Cadastrar", class: "btn btn-primary btn-flat btn-block" %>
    </div>
  </div>
<% end %>

<div class="social-auth-links text-center">
  <%= render 'devise/shared/links' %>
</div>
