<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h3 class="text-center mb-3">Criar conta</h3>
  <div class="input-group mb-3"> <!-- First name -->
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name", required: true,
    placeholder: "Nome", class: "form-control" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-user"></span>
      </div>
    </div>
  </div>
  <div class="input-group mb-3"> <!-- Last name -->
    <%= f.text_field :last_name, autocomplete: "name", placeholder: "Sobrenome", class: "form-control" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-user"></span>
      </div>
    </div>
  </div>
  <div class="input-group mb-3">
    <%= f.email_field :email, autocomplete: "email", required: true,
    placeholder: "Email", class: "form-control" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-envelope"></span>
      </div>
    </div>
  </div>
  <div class="input-group mb-3">
    <%= f.password_field :password, autocomplete: "password", class: "form-control", required: true,
    placeholder: "Senha" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-lock"></span>
      </div>
    </div>
  </div>
  <div class="input-group mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "password", class: "form-control", required: true,
    placeholder: "Confirmação da senha" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-lock"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
<%= render 'devise/shared/links' %>
