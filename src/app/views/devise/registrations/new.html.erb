<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :floating_labels_form) do |f| %>

<div class="register-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <%= inline_svg_tag('logo.svg', class: 'logo') %>
    </div>
    <div class="card-body">
      <p class="register-box-msg">Entre com sua conta para iniciar a sessão</p>
      <%= f.input :full_name, input_html: { placeholder: 'Nome completo' } %>
      <%= f.input :email, required: true, input_html: { placeholder: 'Seu e-mail' } %>
    
      <%= f.input :password, required: true, input_html: { placeholder: 'Senha' } %>
      <%= f.input :password_confirmation, required: true,
        input_html: { placeholder: 'Confirmação da senha' } %>
      
      <%= f.button :submit, 'Criar conta', class: 'btn btn-primary btn-block' %>
    </div>
    <div class="card-footer text-center">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
<% end %>

