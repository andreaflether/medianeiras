<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <span class="login-box-msg">
    <h4 class="mb-2"><b>Esqueceu sua senha?</b></h4>
    <p class="mb-1">Recupere-a informando abaixo o e-mail que você usou para criar sua conta.</p>
  </span>

  <div class="input-group mb-3">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-envelope"></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= f.submit "Enviar instruções", class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <%= render 'devise/shared/links' %>
<% end %>
