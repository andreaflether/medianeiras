<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Medianeiras Admin | <%= t controller_name, scope: 'controllers' %></title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag 'admin' %>
  <%= custom_flash_messages %>
  
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

</head>
<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="../../index3.html" class="nav-link">Início</a>
      </li>
      <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Contato</a>
      </li>
    </ul>

    <!-- SEARCH FORM -->
    <form class="form-inline ml-3">
      <div class="input-group input-group-sm">
        <input class="form-control form-control-navbar" type="search" placeholder="Procurar..." aria-label="Search">
        <div class="input-group-append">
          <button class="btn btn-navbar" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </form>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <!-- Notifications Dropdown Menu -->
      <li class="nav-item dropdown">
        <a class="nav-link" data-toggle="dropdown" href="#">
          <p>Usuário <i class="fas fa-angle-down"></i></p>
        </a>
        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
          <p class="dropdown-item text-center mb-0">
            <%= current_user.name %> <span class="ml-1 right badge badge-primary">Admin</span>
          </p>
          <div class="dropdown-divider"></div>
            <%= link_to 'Preferências', edit_user_registration_path, class: "dropdown-item text-center" %>

          <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: "dropdown-item text-center" %>
        </div>
      </li>
    </ul>
  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="../../index3.html" class="brand-link">
      <span class="fas fa-cog brand-image medianeiras-logo"></span>
      <span class="brand-text font-weight-light text-center">Medianeiras Admin</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
      <!-- Sidebar user (optional) -->
      <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
          <img src="https://avatars3.githubusercontent.com/u/50052646?s=460&v=4" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
          <a href="#" class="d-block"><%= current_user.name %></a>
        </div>
      </div>

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- ALUNOS -->
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-user-graduate"></i>
              <p>
                Alunos
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to new_person_path(type: 'student'), class: "nav-link" do %>
                  <i class="far fa-circle nav-icon"></i>
                  Cadastrar aluno
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to students_path, class: "nav-link" do %>
                  <i class="far fa-circle nav-icon"></i>
                  Ver alunos cadastrados
                <% end %>
              </li>
            </ul>
          </li>
          <li class="nav-item">
            <a href="../widgets.html" class="nav-link">
              <i class="nav-icon fas fa-venus"></i>
              <p>
                Cadastro Promulher
              </p>
            </a>
          </li>
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-copy"></i>
              <p>
                Atividades
                <i class="fas fa-angle-left right"></i>
                <span class="badge badge-info right"><%= @activities_count %></span>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to new_activity_path, class: "nav-link" do %>
                  <i class="far fa-circle nav-icon"></i>
                  Cadastrar atividade
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to activities_path, class: "nav-link" do %>
                  <i class="far fa-circle nav-icon"></i>
                  Ver atividades
                <% end %>
              </li>
            </ul>
          </li>
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-id-card-alt"></i>
              <p>
                Voluntários
                <i class="right fas fa-angle-left"></i>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to new_person_path(type: 'volunteer'), class: "nav-link" do %>
                  <i class="far fa-circle nav-icon"></i>
                  Cadastrar voluntário
                <% end %>
              </li>
              <li class="nav-item">
                <a href="../charts/flot.html" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Ver todos</p>
                </a>
              </li>
            </ul>
          </li>
          <% if current_user.superadmin? %>
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link">
              <i class="nav-icon fas fa-user-circle"></i>
              <p>
                Usuários
                <i class="fas fa-angle-left right"></i>
                <span class="badge badge-info right">Superadmin</span>
              </p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to users_path, class: "nav-link" do %>
                  <i class="far fa-circle nav-icon"></i>
                  Gerenciar
                <% end %>
              </li>
            </ul>
          </li>
          <% end %>
          <li class="nav-item has-treeview">
            <%= link_to events_path, class: "nav-link" do %>
              <i class="nav-icon fas fa-bullhorn"></i>
              <p>
                Eventos
                <i class="fas fa-angle-left right"></i>
              </p>
            <% end %>

            <ul class="nav nav-treeview">
              <li class="nav-item">
                <%= link_to new_event_path, class: "nav-link" do %>
                <i class="far fa-circle nav-icon"></i>
                  <p> Novo evento</p>
                <% end %>
              </li>
              <li class="nav-item">
                <a href="../forms/advanced.html" class="nav-link">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Próximos eventos</p>
                </a>
              </li>
              <li class="nav-item">
                <%= link_to events_path, class: "nav-link" do %>
                <i class="far fa-circle nav-icon"></i>
                  <p>Listagem de eventos</p>
                <% end %>
              </li>
            </ul>
          </li>
          <li class="nav-header">OUTROS</li>
          <li class="nav-item">
            <%= link_to calendar_path, class: "nav-link" do %>
            <i class="nav-icon fas fa-calendar-alt"></i>
              <p>Calendário</p>
              <span class="badge badge-info right">2</span>
            <% end %>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1><%= t controller_name, scope: 'controllers' %></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <%= render_breadcrumbs :tag => :li, :separator => '&nbsp' %>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <%= yield %>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
      <b>Versão</b> 2.0.0
    </div>
    <strong>
      Copyright &copy; <%= Date.today.year %> <%= link_to 'Centro Comunitário Nossa Senhora Medianeira', root_path %>.
    </strong>
    Todos os direitos reservados.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
</body>
</html>
