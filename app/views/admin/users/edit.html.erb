<div class="card ">
  <div class="card-header">
    <h3 class="card-title"><%= title %></h3>
  </div>
  <div class="card-body">
    <%= simple_form_for(@user) do |f| %>
      <div class="form-inputs">
        <div class="row">
          <div class="col-md-6">
            <%= f.input :first_name %>   
          </div>
          <div class="col-md-6">
            <%= f.input :last_name %>
          </div>
          <div class="col-md-6">
            <%= f.input :email %>    
          </div>
          <div class="col-md-6">
            <%= f.input :role, collection: [['usuario', 'Usuário'], ['admin', 'Administrador'], ['superadmin', 'Superadministrador']], prompt: "Selecionar privilégio",
            label_method: :second, value_method: :first %>  
          </div>
        </div>
      </div>
  </div>
  <div class="card-footer">
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to 'Voltar', :back, class: "btn btn-default float-right" %>
  </div>
  <% end %>
</div>


